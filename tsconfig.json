{
  "compilerOptions": {
    "sourceMap": true,
    "inlineSources": true,
    "sourceRoot": "/",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "removeComments": true,
    "strict": true,
    "resolveJsonModule": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es2020",
    "target": "es2020",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*",
        "./*"
      ],
    }
  },
  "include": ["src/**/*"]
}
